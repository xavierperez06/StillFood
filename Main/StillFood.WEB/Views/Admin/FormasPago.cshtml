@model List<StillFood.Models.FormaPago>

<div class="row">
    <div class="tit-admin">Formas de Pago</div>
</div>
<div class="row">
    <input type="hidden" id="IdFormaPago" />
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4">
        <a class="btn btn-success" data-toggle="tooltip" title="Agregar" onclick="AgregarEditarFormaPago(0)"><i class="glyphicon glyphicon-plus"></i></a>
        <div class="table-responsive">
            <table id="tblFormasPago" class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Activo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var wFormaPago in Model)
            {
                        <tr>
                            @if (wFormaPago.Activo)
                            {
                                <td>@wFormaPago.Id</td>
                                <td>@wFormaPago.Nombre</td>
                                <td>Sí</td>
                            }
                            else
                            {
                                <td style="background-color:#F5A9A9;">@wFormaPago.Id</td>
                                <td style="background-color:#F5A9A9;">@wFormaPago.Nombre</td>
                                <td style="background-color:#F5A9A9;">No</td>
                            }
                            <td style="text-align:center;">
                                <a class="btn btn-info" style="margin-left:5px;" data-toggle="tooltip" title="Editar" onclick="AgregarEditarFormaPago(@wFormaPago.Id)"><i class="glyphicon glyphicon-pencil"></i></a>
                                <a class="btn btn-danger" style="margin-left:5px;" data-toggle="tooltip" title="Eliminar" onclick="ConfirmaEliminaFormaPago(@wFormaPago.Id)"><i class="glyphicon glyphicon-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Modal Alta/Edicion -->
<div class="modal fade" id="NuevoModalFormaPago" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#A3BD31;color:white;font-size:25px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Forma de Pago</h4>
            </div>
            <div class="modal-body" id="BodyNuevoFormaPago">
            </div>
            <div class="modal-footer">
                <a class="btn btn-green" onclick="SubmitFormaPago()">Guardar</a>
                <a class="btn btn-green" data-dismiss="modal">Cancelar</a>
            </div>
        </div>
    </div>
</div>

<!-- Modal Eliminacion -->
<div class="modal fade" id="EliminaModalFormaPago" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#FE2E2E;color:white;font-size:25px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Eliminar Forma de Pago</h4>
            </div>
            <div class="modal-body" id="BodyEliminaFormaPago">
                <h4 style="text-align:center;"><img style="margin-right:5px;" src="~/Content/Img/Alert.png" />¿Está seguro que desea deshabilitar el registro seleccionado?</h4>
            </div>
            <div class="modal-footer">
                <a class="btn btn-green" style="width:40px;height:35px;" onclick="EliminarFormaPago()">Sí</a>
                <a class="btn btn-green" style="width:40px;height:35px;" data-dismiss="modal">No</a>
            </div>
        </div>
    </div>
</div>
