@model List<StillFood.Models.Rol>

<div class="row">
    <div class="tit-admin">Roles</div>
</div>
<div class="row">
    <input type="hidden" id="IdRol" />
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4">
        <a class="btn btn-success" data-toggle="tooltip" title="Agregar" onclick="AgregarEditarRol(0)"><i class="glyphicon glyphicon-plus"></i></a>
        <div class="table-responsive">
            <table id="tblRoles" class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var wRol in Model)
            {
                        <tr>
                                <td>@wRol.Id</td>
                                <td>@wRol.Nombre</td>
                                <td>@wRol.Descripcion</td>

                            <td style="text-align:center;">
                                <a class="btn btn-info" style="margin-left:5px;" data-toggle="tooltip" title="Editar" onclick="AgregarEditarRol(@wRol.Id)"><i class="glyphicon glyphicon-pencil"></i></a>
                                <a class="btn btn-danger" style="margin-left:5px;" data-toggle="tooltip" title="Eliminar" onclick="ConfirmaEliminaRol(@wRol.Id)"><i class="glyphicon glyphicon-trash"></i></a>
                                <a class="btn btn-warning" style="margin-left:5px;" data-toggle="tooltip" title="Ver Permisos Asociados" onclick="PermisosAsociados(@wRol.Id)"><i class="glyphicon glyphicon-check"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Alta/Edicion -->
<div class="modal fade" id="NuevoModalRol" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#A3BD31;color:white;font-size:25px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Rol</h4>
            </div>
            <div class="modal-body" id="BodyNuevoRol">
            </div>
            <div class="modal-footer">
                <a class="btn btn-green" onclick="SubmitRol()">Guardar</a>
                <a class="btn btn-green" data-dismiss="modal">Cancelar</a>
            </div>
        </div>
    </div>
</div>

<!-- Modal Eliminacion -->
<div class="modal fade" id="EliminaModalRol" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#FE2E2E;color:white;font-size:25px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Eliminar Rol</h4>
            </div>
            <div class="modal-body" id="BodyEliminaRol">
                <h4 style="text-align:center;"><img style="margin-right:5px;" src="~/Content/Img/Alert.png" />¿Está seguro que desea eliminar el registro seleccionado?</h4>
            </div>
            <div class="modal-footer">
                <a class="btn btn-green" style="width:40px;height:35px;" onclick="EliminarRol()">Sí</a>
                <a class="btn btn-green" style="width:40px;height:35px;" data-dismiss="modal">No</a>
            </div>
        </div>
    </div>
</div>
