@model StillFood.Models.Usuario

<div class="row">
    <div class="tit-admin">Roles Asociados</div>
</div>
<div class="row">
    <div style="padding-left:15px;">
        <strong>Usuario:</strong> @Model.NombreApellido
    </div>

    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4">
        <input type="hidden" id="IdUsuarioAsociado" />
        <input type="hidden" id="IdRolAsociadoUsuario" />
        <a class="btn btn-success" data-toggle="tooltip" title="Agregar Rol" onclick="AgregarRol(@Model.Id)"><i class="glyphicon glyphicon-plus"></i></a>
        <div class="table-responsive">
            <table id="tblRoles" class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var wRol in Model.Roles)
            {
                        <tr>
                            <td>@wRol.Nombre</td>
                            <td>@wRol.Descripcion</td>
                            <td style="text-align:center;">
                                <a class="btn btn-danger" style="margin-left:5px;" data-toggle="tooltip" title="Eliminar" onclick="ConfirmaEliminaRolAsociado(@Model.Id,@wRol.Id)"><i class="glyphicon glyphicon-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para Asociar Permiso a Rol -->
<div class="modal fade" id="ModalAsociarRol" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#A3BD31;color:white;font-size:25px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Asociar Rol a Usuario</h4>
            </div>
            <div class="modal-body" id="BodyAsociarRol">
            </div>
            <div class="modal-footer">
                <a class="btn btn-green" onclick="SubmitAsociarRol(@Model.Id)">Guardar</a>
                <a class="btn btn-green" data-dismiss="modal">Cancelar</a>
            </div>
        </div>
    </div>
</div>

<!-- Modal Eliminacion -->
<div class="modal fade" id="EliminaModalRolesAsociados" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#FE2E2E;color:white;font-size:25px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Desasociar Rol de Usuario</h4>
            </div>
            <div class="modal-body" id="BodyEliminaRolAsociado">
                <h4 style="text-align:center;"><img style="margin-right:5px;" src="~/Content/Img/Alert.png" />¿Está seguro que desea eliminar el rol seleccionado?</h4>
            </div>
            <div class="modal-footer">
                <a class="btn btn-green" style="width:40px;height:35px;" onclick="EliminarRolAsociado()">Sí</a>
                <a class="btn btn-green" style="width:40px;height:35px;" data-dismiss="modal">No</a>
            </div>
        </div>
    </div>
</div>