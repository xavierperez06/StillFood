@model List<StillFood.Models.Permiso>

<div class="row">
    <div class="tit-admin">Permisos</div>
</div>
<div class="row">
    <input type="hidden" id="IdPermiso" />
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
        <a class="btn btn-success" data-toggle="tooltip" title="Agregar" onclick="AgregarEditarPermiso(0)"><i class="glyphicon glyphicon-plus"></i></a>
        <div class="table-responsive">
            <table id="tblPermisos" class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var wPermiso in Model)
            {
                        <tr>
                            @if (wPermiso.Activo)
                            {
                                <td>@wPermiso.Id</td>
                                <td>@wPermiso.Nombre</td>
                                <td>@wPermiso.Descripcion</td>
                            }
                            else
                            {
                                <td style="background-color:#F5A9A9;">@wPermiso.Id</td>
                                <td style="background-color:#F5A9A9;">@wPermiso.Nombre</td>
                                <td style="background-color:#F5A9A9;">@wPermiso.Descripcion</td>
                            }

                            <td style="text-align:center;">
                                <a class="btn btn-info" style="margin-left:5px;" data-toggle="tooltip" title="Editar" onclick="AgregarEditarPermiso(@wPermiso.Id)"><i class="glyphicon glyphicon-pencil"></i></a>
                                @if (wPermiso.Activo)
                                {
                                    <a class="btn btn-danger" style="margin-left:5px;" data-toggle="tooltip" title="Eliminar" onclick="ConfirmaEliminaPer(@wPermiso.Id)"><i class="glyphicon glyphicon-trash"></i></a>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Modal Alta/Edicion -->
<div class="modal fade" id="NuevoModalPer" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#A3BD31;color:white;font-size:25px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Permiso</h4>
            </div>
            <div class="modal-body" id="BodyNuevoPer">
            </div>
            <div class="modal-footer">
                <a class="btn btn-green" onclick="SubmitPermiso()">Guardar</a>
                <a class="btn btn-green" data-dismiss="modal">Cancelar</a>
            </div>
        </div>
    </div>
</div>

<!-- Modal Eliminacion -->
<div class="modal fade" id="EliminaModalPer" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#FE2E2E;color:white;font-size:25px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Eliminar Permiso</h4>
            </div>
            <div class="modal-body" id="BodyEliminaPer">
                <h4 style="text-align:center;"><img style="margin-right:5px;" src="~/Content/Img/Alert.png" />¿Está seguro que desea deshabilitar el registro seleccionado?</h4>
            </div>
            <div class="modal-footer">
                <a class="btn btn-green" style="width:40px;height:35px;" onclick="EliminarPermiso()">Sí</a>
                <a class="btn btn-green" style="width:40px;height:35px;" data-dismiss="modal">No</a>
            </div>
        </div>
    </div>
</div>