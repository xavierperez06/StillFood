@model StillFood.Models.Comercio

<div class="row">
    <div class="tit-admin">Productos</div>
</div>

<div class="row">
    <input type="hidden" id="IdProducto" />
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4">
        <a class="btn btn-success" data-toggle="tooltip" title="Agregar" onclick="AgregarEditarProducto(0)"><i class="glyphicon glyphicon-plus"></i></a>
        <div class="table-responsive">
            <table id="tblProductos" class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Stock</th>
                        <th>Precio</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var wProducto in Model.Productos)
            {
                        <tr>
                            @if (wProducto.Stock > 0)
                            {
                                <td>@wProducto.Id</td>
                                <td>@wProducto.Nombre</td>
                                <td>@wProducto.Stock</td>
                                <td>@wProducto.Precio</td>
                            }
                            else
                            {
                                <td style="background-color:#F5A9A9;">@wProducto.Id</td>
                                <td style="background-color:#F5A9A9;">@wProducto.Nombre</td>
                                <td style="background-color:#F5A9A9;">@wProducto.Stock</td>
                                <td style="background-color:#F5A9A9;">@wProducto.Precio</td>
                            }
                            <td style="text-align:center;">
                                <a class="btn btn-info" style="margin-left:5px;" data-toggle="tooltip" title="Editar" onclick="AgregarEditarProducto(@wProducto.Id)"><i class="glyphicon glyphicon-pencil"></i></a>
                                <a class="btn btn-danger" style="margin-left:5px;" data-toggle="tooltip" title="Eliminar" onclick="ConfirmaEliminaProd(@wProducto.Id)"><i class="glyphicon glyphicon-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Alta/Edicion -->
<div class="modal fade" id="NuevoModalProd" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#A3BD31;color:white;font-size:25px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Producto</h4>
            </div>
            <div class="modal-body" id="BodyNuevoProd">
            </div>
            <div class="modal-footer">
                <a class="btn btn-green" onclick="SubmitProducto()">Guardar</a>
                <a class="btn btn-green" data-dismiss="modal">Cancelar</a>
            </div>
        </div>
    </div>
</div>

<!-- Modal Eliminacion -->
<div class="modal fade" id="EliminaModalProd" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#FE2E2E;color:white;font-size:25px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Eliminar Producto</h4>
            </div>
            <div class="modal-body" id="BodyEliminaProd">
                <h4 style="text-align:center;"><img style="margin-right:5px;" src="~/Content/Img/Alert.png" />¿Está seguro que desea eliminar el registro seleccionado?</h4>
            </div>
            <div class="modal-footer">
                <a class="btn btn-green" style="width:40px;height:35px;" onclick="EliminarProducto()">Sí</a>
                <a class="btn btn-green" style="width:40px;height:35px;" data-dismiss="modal">No</a>
            </div>
        </div>
    </div>
</div>