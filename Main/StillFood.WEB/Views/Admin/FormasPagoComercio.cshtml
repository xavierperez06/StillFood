@model StillFood.Models.Comercio

<div class="row">
    <div class="tit-admin">Formas de Pago</div>
</div>
<div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4">
        <input type="hidden" id="IdComercio" />
        <input type="hidden" id="IdFormaPago" />
        <a class="btn btn-success" data-toggle="tooltip" title="Agregar Rol" onclick="AgregarFormaPagoComercio(@Model.Id)"><i class="glyphicon glyphicon-plus"></i></a>
        <div class="table-responsive">
            <table id="tblFormasPago" class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var wFormaPago in Model.FormasPago)
            {
                        <tr>
                            <td>@wFormaPago.Nombre</td>
                            <td style="text-align:center;">
                                <a class="btn btn-danger" style="margin-left:5px;" data-toggle="tooltip" title="Eliminar" onclick="ConfirmaEliminaFormaPagoComercio(@Model.Id,@wFormaPago.Id)"><i class="glyphicon glyphicon-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para Asociar Forma de Pago al Comercio -->
<div class="modal fade" id="ModalAsociarFormaPago" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#A3BD31;color:white;font-size:25px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Asociar Forma de Pago</h4>
            </div>
            <div class="modal-body" id="BodyAsociarFormaPago">
            </div>
            <div class="modal-footer">
                <a class="btn btn-green" onclick="SubmitAsociarFormaPago(@Model.Id)">Guardar</a>
                <a class="btn btn-green" data-dismiss="modal">Cancelar</a>
            </div>
        </div>
    </div>
</div>

<!-- Modal Eliminacion -->
<div class="modal fade" id="EliminaModalFormasPagoAsociados" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#FE2E2E;color:white;font-size:25px;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Eliminar Forma de Pago</h4>
            </div>
            <div class="modal-body" id="BodyEliminaFormaPagoAsociado">
                <h4 style="text-align:center;"><img style="margin-right:5px;" src="~/Content/Img/Alert.png" />¿Está seguro que desea eliminar la forma de pago asociada seleccionado?</h4>
            </div>
            <div class="modal-footer">
                <a class="btn btn-green" style="width:40px;height:35px;" onclick="EliminarFormaPagoAsociado()">Sí</a>
                <a class="btn btn-green" style="width:40px;height:35px;" data-dismiss="modal">No</a>
            </div>
        </div>
    </div>
</div>